        <Button Grid.Column="6" Grid.Row="7" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>

        <Label Grid.Column="8" Grid.Row="0" Content="Choose the creating piece" Margin="10,30,90,0" Width="200" Height="30"/>

        <ComboBox x:Name ="Pieces" Grid.Column="8" Width="120" Height="27" Margin="10,0,170,33" Grid.Row="1" RenderTransformOrigin="0,0">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.001"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.745"/>
                </TransformGroup>
            </ComboBox.RenderTransform>
            <ComboBoxItem IsSelected="True">
                <TextBlock Text="King"/>
            </ComboBoxItem>

            <ComboBoxItem>
                <TextBlock Text="Queen"/>
            </ComboBoxItem>

            <ComboBoxItem>
                <TextBlock Text="Bishop"/>
            </ComboBoxItem>

            <ComboBoxItem>
                <TextBlock Text="Knight"/>
            </ComboBoxItem>

            <ComboBoxItem>
                <TextBlock Text="Pawn"/>
            </ComboBoxItem>

            <ComboBoxItem>
                <TextBlock Text="Rook"/>
            </ComboBoxItem>
        </ComboBox>

        <TextBlock Grid.Column="8" Name="tbRules" HorizontalAlignment="Center" Margin="0,17,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Height="150" Grid.RowSpan="3"/>
    </Grid>
</Window>
