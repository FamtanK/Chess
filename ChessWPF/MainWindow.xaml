        <Button Grid.Column="0" Grid.Row="2" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="1" Grid.Row="2" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="2" Grid.Row="2" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
