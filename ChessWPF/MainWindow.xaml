        <Button Grid.Column="0" Grid.Row="1" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="3" Grid.Row="1" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
