        <Button Grid.Column="0" Grid.Row="4" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="1" Grid.Row="4" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="2" Grid.Row="4" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="3" Grid.Row="4" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="4" Grid.Row="4" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="5" Grid.Row="4" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="6" Grid.Row="4" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
        <Button Grid.Column="7" Grid.Row="4" Background="Black" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>

        <Button Grid.Column="1" Grid.Row="5" Background="White" Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown"/>
